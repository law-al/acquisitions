# Development Environment Variables
# Copy this file to .env.development and update with your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Neon Local)
# This will be set automatically by docker-compose.dev.yml
# For local development without Docker, use:
# DATABASE_URL=postgresql://neon:password@localhost:5432/neondb

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION=1d

# Arcjet Configuration (optional for dev)
ARCJET_KEY=

# Logging
LOG_LEVEL=debug
